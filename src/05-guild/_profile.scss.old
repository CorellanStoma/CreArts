// ╔════════════════════╦═══════════════════════════════════════════════════════════════════════════════════╗
// ║ Profile            ║ Spotify                                                                           ║
// ╚════════════════════╩═══════════════════════════════════════════════════════════════════════════════════╝

// Spacing
.powercord-spotify .horizontal-1ae9ci {
  margin-top: 2px;
}

// Spotify Controls
.fas, .fa-backward, .fa-fw, .fa-heart, .fa-sync, .fa-undo {
  color: var(--interactive-normal) ;
}

// Bar
.powercord-spotify .spotify-seek-bar {
  background: var(--background-tertiary) !important;
  height: 6px !important;
  margin-left: 10px;
  margin-right: 10px;
  border-radius: var(--radius-primary);
  margin-top: 4px;
  margin-bottom: 8px;
}

.powercord-spotify .spotify-seek-bar-progress {
  border-radius: var(--radius-primary) !important;
  background: var(--accent-primary) !important;
}

// Cursor
.powercord-spotify .spotify-seek-bar-cursor {
  background: var(--interactive-normal) !important;
  width: 12px !important;
  height: 12px !important;
  border: none !important;
}

// Seek Elements
.powercord-spotify .spotify-seek-elements {
  margin-left: 6px !important;
  margin-right: 6px !important;
  margin-top: 0px !important;
  margin-bottom: 0px !important;
}

.powercord-spotify.hover .spotify-seek-elements {
  margin-left: 6px;
  margin-right: 6px;
  margin-top: 8px !important;
  margin-bottom: 8px !important;
}

// Extra Controls
.powercord-spotify.hover .spotify-extra-controls {
  margin-left: 80px;
  margin-right: 80px;
  border-radius: var(--radius-primary);
  background: var(--background-tertiary);
  margin-top: -4px;
  margin-bottom: -14px;
}

// Text
.powercord-spotify .spotify-seek-duration {
  font-size: 14px;
}