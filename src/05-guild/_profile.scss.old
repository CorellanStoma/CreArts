// Background
.panels-j1Uci_ {
    border-radius: var(--radius-primary);
    background: transparent;
    position: relative;
    margin-top: 20px;
    box-shadow: none;
    margin-right: 2px;
    z-index: 200;
}

// Blur
.panels-j1Uci_::before {
  background: var(--background-secondary);
  border-radius: var(--radius-primary);
  position: absolute;
  content: "";
  border: var(--border);
  backdrop-filter: blur(var(--blur));
  height:100%; 
  width: 100%;
  z-index: -1;
}

// Background
.panels-j1Uci_ .container-3baos1:nth-last-child(1) {
  background: var(--background-tertiary);
  border-radius: var(--radius-primary);
